extends layout

block content
  form(class="container" action="/signup", method="post" onsubmit="return $('#password').val() == $('#confirmPassword').val();")
    div(class="col-md-4")
    div(class="col-md-4")
      input(type="text", name="username" id="username" class="form-control" placeholder="Username" autofocus="autofocus" required)
      input(type="password" name="password" id="password" class="form-control" placeholder="Password" required)
      input(type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Confirm Password" required)
      div(class="row text-center")
        div(class="col-md-6")
          label(for="favoriteTrick" class="form-control") Favorite Trick?:
        div(class="col-md-6")
          select(name="favoriteTrick" class="form-control")
            option Fetch
            option Jump
            option Roll over
            option Spin
      input(type="submit" value="Sign up" class="btn btn-primary btn-submit")
    div(class="col-md-4")