extends layout

block content
  form(action="/signup", method="post")
    table
      tr
        td
          label Username:
        td
          input(type="text", name="username")
      tr
        td
          label Password:
        td
          input(type="password", name="password")
      tr
        td
          label Favorite trick:
        td
          select(name="favoriteTrick")
            option Roll over
            option Spin
            option Fetch
      tr
        td(colspan="2")
          input(type="submit" value="Submit")