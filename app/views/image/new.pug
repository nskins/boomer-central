extends ../layout

block content
  form(class="container text-center" enctype="multipart/form-data" action="/images", method="post")
    div(class="form-content")
      input(type="text", name="name" id="name" class="form-control" placeholder="Image Name" autofocus="autofocus" required)
      input(type="text", name="description" id="description" class="form-control" placeholder="Image Description" autofocus="autofocus")
      label(class="form-control font-weight-bold" for="image") Upload Image
        input(class="form-control" type="file" name="image" required)
      input(type="submit" value="Submit" class="btn btn-primary btn-submit")
