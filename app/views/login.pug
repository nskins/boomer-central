extends layout

block content
  form(class="container" action="/login", method="post")
    div(class="col-md-4")
    div(class="col-md-4")
      input(type="text", name="username" id="username" class="form-control" placeholder="Username" autofocus="autofocus" required)
      input(type="password" name="password" id="password" class="form-control" placeholder="Password" required)
      input(type="submit" value="Submit" class="btn btn-primary btn-submit")
    div(class="col-md-4")
