extends ../layout/with-header

block content
  form(class="container text-center" enctype="multipart/form-data" action="/users/" + user_param.username, method="post")
    div(class="form-content")
      label(class="form-control font-weight-bold" for="avatar") Upload Avatar
        input(class="form-control" type="file" name="avatar")
      div(class="row")
        div(class="col-md-6")
          label(for="favoriteTrick" class="form-control") Favorite Trick?:
        div(class="col-md-6")
          select(name="favoriteTrick" class="form-control" id="favoriteTrick")
            - ["Fetch", "Jump", "Roll over", "Spin"].forEach(trick => {
              - if (trick == user_param.favoriteTrick) {
                option(selected="selected") #{trick}
              - } else {
                option #{trick}
              - }
            - });
      input(type="submit" value="Save Changes" class="btn btn-primary btn-submit")
      input(type="hidden" name="_method" value="patch")